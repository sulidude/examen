<h1>TodoList#index</h1>
<div class="todolists index">
  <h2>Todo Lists</h2>

    <%= link_to("Add New TodoList", {:action => 'new'}, :class => 'action new') %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>todolist</th>
    </tr>
    <% @todolists.each do |todolist| %>
    <tr>
      <td><%= todolist.name %></td>

      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => todolist.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => todolist.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => todolist.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
