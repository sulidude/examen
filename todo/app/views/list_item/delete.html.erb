<div class="listitems delete">
  <h2>Delete listitem</h2>

  <%= form_for(:listitem, :url => {:action => 'destroy', :id => @listitem.id}) do |f| %>

    <p>Are you sure you want to permanently delete this listitem?</p>

    <p class="reference-name"><%= @listitem.ingaveDatum %></p>
      <p class="reference-name"><%= @listitem.eindDatum %></p>
