<h1>ListItem#show</h1>
<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to("<< Back to List", {:controller => 'todo_list' , :action => 'show' , :id => @listitem.todolist_id }, :class => 'back-link') %>

<div class="todolist show">
  <h2>Show List Item <%= @listitem.id %></h2>

  <table summary="todolist detail view">
    <th>ingaveDatum</th>
    <th>eindDatum</th>
    <th>prioriteit</th>
    <th>beschrijving </th>
    <tr>
      <td><%= @listitem.ingaveDatum%></td>
      <td><%= @listitem.eindDatum %></td>
      <td><%= @listitem.prioriteit %></td>
      <td><%= @listitem.beschrijving %></td>

      <td class="actions">
        <%= link_to("Edit", {:action => 'edit', :id => @listitem.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => @listitem.id}, :class => 'action delete') %>
      </td>
    </tr>

  </table>

</div>
